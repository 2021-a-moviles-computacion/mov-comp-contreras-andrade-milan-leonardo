<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crearCasa">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="@string/tituloActivityCrearCasa"
        app:layout_constraintBottom_toTopOf="@+id/ti_numCasa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ti_numCasa"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="@string/input_numeroCasa"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ti_direccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ti_direccion"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="@string/input_direccion"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ti_areaTerreno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ti_avaluo"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="@string/input_avaluo"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/cb_bodega"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ti_areaTerreno"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="@string/input_terreno"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/ti_areaConstruccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ti_areaConstruccion"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="@string/input_construccion"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/ti_parqueaderos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ti_parqueaderos"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="@string/input_parqueadero"
        android:inputType="numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/ti_avaluo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/cb_bodega"
        android:layout_width="44dp"
        android:layout_height="26dp"
        android:layout_marginBottom="68dp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toTopOf="@+id/btn_CrearCasa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_CrearCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="@string/botonCrear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:text="@string/input_bodega"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cb_bodega"
        app:layout_constraintEnd_toStartOf="@+id/cb_bodega"
        app:layout_constraintTop_toTopOf="@+id/cb_bodega"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>